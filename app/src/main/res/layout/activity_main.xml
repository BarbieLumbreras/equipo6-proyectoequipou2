<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    tools:context=".MainActivity">

    <!-- Toolbar superior -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#2c2c2c"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvGameId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ID: "
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turno: Blancas"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Tablero hexagonal con fondo de madera -->
    <upv_dap.sep_dic_25.itiid_76129.hexagonalchess.HexagonalBoardView
        android:id="@+id/hexBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/buttonContainer"
        android:background="#3E2723" />

    <!-- Botones inferiores -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#2c2c2c"
        android:gravity="center">

        <Button
            android:id="@+id/btnCreateGame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Crear Partida"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnJoinGame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Unirse"
            android:backgroundTint="#2196F3" />
    </LinearLayout>

</RelativeLayout>